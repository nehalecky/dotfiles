#!/bin/bash
# Weather script with your favorite locations
# Usage: weather [location]

case ${1:-} in
  ""|local|home)
    echo "ğŸ  La Lucila (Home):"
    curl -s "wttr.in/La_Lucila,Buenos_Aires?format=3"
    echo
    ;;
  auto|detect)
    echo "ğŸ“ Auto-detected location:"
    curl -s "wttr.in?format=3"
    echo
    ;;
  reno|nv)
    echo "ğŸ° Reno, Nevada:"
    curl -s "wttr.in/Reno,NV?format=3"
    echo
    ;;
  futaleufu|chile|patagonia)
    echo "ğŸ”ï¸ FutaleufÃº, Chile:"
    curl -s "wttr.in/Futaleufu,Chile?format=3"
    echo
    ;;
  forecast|f)
    echo "ğŸ“Š 3-day forecast for La Lucila:"
    curl -s "wttr.in/La_Lucila,Buenos_Aires"
    ;;
  today|t)
    echo "â° Today's hourly breakdown for La Lucila:"
    curl -s "wttr.in/La_Lucila,Buenos_Aires?0"
    ;;
  all|summary)
    echo "ğŸŒ Weather Summary:"
    echo -n "ğŸ  Home: "; curl -s "wttr.in/La_Lucila,Buenos_Aires?format=3"
    echo -n "ğŸ° Reno: "; curl -s "wttr.in/Reno,NV?format=3"
    echo -n "ğŸ”ï¸ FutaleufÃº: "; curl -s "wttr.in/Futaleufu,Chile?format=3"
    echo
    ;;
  help|h)
    echo "Weather command usage:"
    echo "  weather          # La Lucila (default/home)"
    echo "  weather reno     # Reno, Nevada"
    echo "  weather futaleufu # FutaleufÃº, Chile"
    echo "  weather auto     # Auto-detected (Ituzaingo)"
    echo "  weather forecast # 3-day forecast"
    echo "  weather today    # Today's hourly breakdown"
    echo "  weather all      # All locations summary"
    echo "  weather [city]   # Any other city"
    ;;
  *)
    echo "ğŸŒ Weather for: $1"
    curl -s "wttr.in/$1?format=3"
    echo
    ;;
esac