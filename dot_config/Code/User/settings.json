{
  // Editor Configuration
  "editor.fontFamily": "'MesloLGLDZ Nerd Font', 'MesloLGS NF', Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5,
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "phase",
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 100],
  "editor.wordWrap": "off",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.trimAutoWhitespace": true,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  
  // File and Explorer
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.*cache": true,
    "**/*.pyc": true
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  
  // Terminal Integration (matches your WezTerm setup)
  "terminal.integrated.fontFamily": "'MesloLGLDZ Nerd Font', 'MesloLGS NF', Monaco, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.env.osx": {
    "PATH": "${env:HOME}/.local/bin:${env:PATH}"
  },
  
  // Workbench (consistent with terminal aesthetic)
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-seti",
  "workbench.startupEditor": "none",
  "workbench.enableExperiments": false,
  "workbench.settings.editor": "json",
  
  // Git Integration
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  
  // Language-specific
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "python.terminal.activateEnvironment": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  "python.analysis.typeCheckingMode": "basic",
  
  // Markdown (documentation focus)
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  
  // AI Integration
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  
  // Performance
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.enabled": false,
  
  // Claude Code Integration
  "claude.keyboardShortcut": "cmd+esc",
  "claude.mcp.configPath": "~/.config/Code/User/claude-mcp-resolved.json"
}