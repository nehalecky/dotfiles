{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Claude Code",
      "type": "shell",
      "command": "claude",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Launch Home Workspace",
      "type": "shell", 
      "command": "workspace-home",
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never"
      }
    },
    {
      "label": "Launch Dev Workspace", 
      "type": "shell",
      "command": "workspace-dev",
      "args": ["${workspaceFolderBasename}"],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never"
      }
    },
    {
      "label": "UV Install",
      "type": "shell",
      "command": "uv",
      "args": ["sync"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "UV Run",
      "type": "shell", 
      "command": "uv",
      "args": ["run", "${input:uvCommand}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    }
  ],
  "inputs": [
    {
      "id": "uvCommand",
      "description": "UV command to run",
      "default": "python -m pytest",
      "type": "promptString"
    }
  ]
}