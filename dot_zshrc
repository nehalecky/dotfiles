zstyle ':completion:*:*:task:*:descriptions' format '%U%B%d%b%u'
zstyle ':completion:*:*:task:*' group-name ''

# npm completion (if available)
if command -v npm >/dev/null 2>&1; then
  eval "$(npm completion)"
fi

