#!/bin/bash
# Starship installation script
# This script runs when the Brewfile changes or on first setup

set -eufo pipefail

echo "ğŸš€ Checking Starship installation..."

# Check if we're on macOS
if [[ "{{ .chezmoi.os }}" == "darwin" ]]; then
    # Check if Homebrew is installed
    if command -v brew >/dev/null 2>&1; then
        # Check if Starship is installed
        if ! brew list starship >/dev/null 2>&1; then
            echo "ğŸ“¦ Installing Starship via Homebrew..."
            brew install starship
        else
            echo "âœ… Starship is already installed"
        fi
    else
        echo "âŒ Homebrew not found. Please install Homebrew first."
        exit 1
    fi
elif [[ "{{ .chezmoi.os }}" == "linux" ]]; then
    # Linux installation (for future cross-platform support)
    if ! command -v starship >/dev/null 2>&1; then
        echo "ğŸ“¦ Installing Starship on Linux..."
        curl -sS https://starship.rs/install.sh | sh -s -- --yes
    else
        echo "âœ… Starship is already installed"
    fi
else
    echo "âš ï¸  Unsupported OS: {{ .chezmoi.os }}"
    echo "Please install Starship manually: https://starship.rs/guide/#ğŸš€-installation"
fi

# Verify installation
if command -v starship >/dev/null 2>&1; then
    echo "âœ¨ Starship $(starship --version) is ready!"
else
    echo "âŒ Starship installation failed"
    exit 1
fi